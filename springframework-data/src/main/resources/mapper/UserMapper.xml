<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yy.springframework.tx.mapper.UserMapper">
    <insert id="save">
        <selectKey order="BEFORE" keyColumn="id" keyProperty="id" resultType="long">
            select last_insert_id()
        </selectKey>
        INSERT into user (id, password, username) VALUES (#{id}, #{password}, #{username})
    </insert>
    <update id="update">
        update user
        set password = #{password}
        where id = #{id}
    </update>
    <select id="getUserById" resultType="com.yy.springframework.tx.model.User">
        select * from user where id = #{id}
    </select>
</mapper>